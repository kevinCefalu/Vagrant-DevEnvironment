{
	"$schema": "./schemas/config.schema.json",
	"servers": [
		{
			"enabled": true, 
			"hostname": "react-v1-docker-host",
			"fs_syncs": [
				{
					"enabled": true,
					"paths": {
						"host": "./scripts", 
						"guest": "/scripts" 
					}
				},
				{
					"enabled": true,
					"paths": {
						"host": "./configs", 
						"guest": "/configs" 
					}
				},
				{
					"enabled": true,
					"paths": {
						"host": "./src", 
						"guest": "/var/www" 
					}
				},
				{
					"enabled": true,
					"paths": {
						"host": "./logs", 
						"guest": "/logs" 
					}
				}
			],
			"hardware": {
				"nic": {
					"_type": "private_network",
					"ip": "192.168.100.100",
					"port_fwds": [
						{
							"id": "http",
							"auto_correct": true,
							"ports": {
								"guest": 80,
								"host": 8080
							}
						}
					]
				}
			},
			"scripts": [
				{
					"_type": "shell", 
					"name": "Bootstrapper",
					"path": "./scripts/shell/_bootstrapper.sh",
					"args": [
						{
							"_type": "json_path",
							"path": "servers/0/timezone"
						},
						{
							"_type": "value",
							"value": "/configs/vm/apt_get_packages_list.txt"
						}
					]
				}
			],
			"docker": {
				"enabled": true, 
				"run": "always",
				"compose_file": "/configs/docker/docker-compose.yml"
			}
		}
	]
}
